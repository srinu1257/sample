<div id="userfield">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    		<div class="fields">
		  <%= f.label :firstname %>
			<%= f.text_field :firstname %>
		</div></br>
		<div class="fields">
		  <%= f.label :lastname %>
			<%= f.text_field :lastname %>
		</div></br>
		<div class="fields" >
			  <%= f.label :age %>
			<%= f.text_field :age %>
		</div></br>
		<div class="fields">
		   <%= f.label :gender %>
			<%= f.select(:gender,(["Male","Female"]))%>
      		</div></br>
			<div class="fields">
         <%= f.label :dateofbirth %>
			<%= f.date_select :dateofbirth ,:start_year => 1990 %>
      </div></br>
       <div class="fields">
      <%= f.label :email %>
			<%= f.email_field :email %></div></br>

			<div class="fields">
       <%= f.label :password %>
			<%= f.password_field :password %></div>
			</br>
			<div class="fields">
      <%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %></div></br>
       <div class="fields" %>
			<label for="user_phone">phone</label>
			<%= f.number_field :phone %></br>
       </div>
     <div class="fields" >
			<label for="user_address">Address</label>
			<%= f.text_area :address %></br>
      </div>
			

  <div class="fields">
  <%= f.submit "Sign up" %>
</div>
<% end %>

<%= render "links" %>
</div>
